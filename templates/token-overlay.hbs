<form id="{{id}}" class="{{classes}}" data-appid="{{appId}}" autocomplete="off">
{{#if show.estimate}}
{{#if estimate}}
    <div style="white-space:no-wrap;text-transform:uppercase;position: absolute;bottom:100%;width:300%;margin:0.25em 0;font-size:90%;left:-100%">
        <div style="letter-spacing:-0.075em;background:#000d;padding:0 0.25em;border-radius:5px;display:inline-block;margin:0 auto">
            <span style="color:{{health}};font-weight:bold">{{estimate}}</span>&nbsp;<span style="color:#ccc;">{{distance}}</span>
        </div>
    </div>
{{/if}}
{{/if}}

{{#if show.any}}
<div style="position:absolute;right:calc(100% + {{left}}px);top:-0em;background:#000d;border-radius:3px;color:#fff;padding:0.25em;line-height:1;text-align:left;margin:0 0.25em;text-transform:uppercase;min-width:12em;opacity:0.9">
<div style="opacity:1">
{{#if show.defense}}
    <div style="font-size:85%;letter-spacing:-0.05em">
        {{actor.name}}
    </div>

    <div style="height:3px"></div>

    <div>

        <span style="font-size:85%"><i class="fa-solid fa-fw fa-heart"></i></span>
        {{actor.attributes.hp.value}}/<span style="font-size:75%">{{actor.attributes.hp.max}}</span>
        {{#if actor.attributes.hp.temp}}(+{{actor.attributes.hp.temp}}){{/if}}

        <span style="font-size:85%; opacity: 0.75"><i class="fa-solid fa-fw fa-shield-halved"></i></span>
        {{actor.attributes.ac.value}}
        
    </div>

    <div style="height:3px"></div>

    <div>
        {{#each actor.saves}}
        <span style="font-size:85%; opacity: 0.75">{{{icon this.slug}}}</span> {{this.check.mod}}
        {{/each}}
    </div>

    <div style="height:3px"></div>

    <div>
        <span style="font-size:85%; opacity: 0.75"><i class="fa-solid fa-fw fa-eye"></i></span>
        {{actor.perception.value}}

        <span style="font-size:85%; opacity: 0.75"><i class="fa-solid fa-fw fa-turn-up"></i></span>
        {{actor.level}}

    {{#if actor.attributes.classOrSpellDC.value}}
        <span style="font-size:85%; opacity: 0.75"><i class="fa-solid fa-fw fa-check"></i></i></span>
        {{actor.attributes.classOrSpellDC.value}}
        {{/if}}

        {{#if actor.system.resources.focus.max}}
        <span style="font-size:85%; opacity: 0.75"><i class="fa-solid fa-fw fa-wand-magic-sparkles"></i></span>
        {{actor.system.resources.focus.value}}
    {{/if}}
    </div>

<div style="height:3px"></div>

    <div>
        <span style="font-size:85%; opacity: 0.75">
            {{{icon actor.attributes.speed.label}}}
        </span>
        <span>
            {{actor.attributes.speed.total}}<span style="font-size:70%;opacity:0.5">ft</span>
        </span>
        <span style="font-size:75%; opacity: 0.75">
            {{actor.attributes.speed.details}}
        </span>
    </div>

        {{#each actor.attributes.speed.otherSpeeds}}
        <div>
        <span style="font-size:85%; opacity: 0.75">
            {{{icon this.label}}}
        </span>
        <span>
            {{this.total}}<span style="font-size:70%;opacity:0.5">ft</span>
        </span>
        <span style="font-size:75%; opacity: 0.75">
            {{this.details}}
        </span>
        </div>
        {{/each}}
<div style="height:3px"></div>
  
    {{!-- <div>
        {{#each actor.skills}}
        <span style="font-size:85%">{{this.slug}}</span>&nbsp;{{this.check.mod}}
        {{/each}}
    </div>
<div style="height:3px"></div> --}}


    {{#if actor.attributes.immunities}}
    <div >
        <span style="font-size:85%; opacity:0.75;"><i class="fa-solid fa-fw fa-octagon-xmark"></i></span>
        {{#each actor.attributes.immunities}}
        <span style="font-size:75%;letter-spacing:-0.05em">{{this.type}}</span> 
        {{/each}}
    </div>
<div style="height:3px"></div>

    {{/if}}

    {{#if actor.attributes.weaknesses}}
    <div >
        <span style="font-size:85%; opacity:0.75;"><i class="fa-solid fa-fw fa-shield-minus"></i></span>
        {{#each actor.attributes.weaknesses}}
        <span style="font-size:75%;letter-spacing:-0.05em">{{this.type}}</span> {{this.value}} 
        {{/each}}
    </div>
<div style="height:3px"></div>

    {{/if}}


    {{#if actor.attributes.resistances}}
    <div >
        <span style="font-size:85%; opacity:0.75;"><i class="fa-solid fa-fw fa-shield-plus"></i></span>
        {{#each actor.attributes.resistances}}
        <span style="font-size:75%;letter-spacing:-0.05em">{{this.type}}</span> {{this.value}} 
        {{/each}}
    </div>
<div style="height:3px"></div>

    {{/if}}



{{#if actor.system.details.languages.value}}
    <div >
        <span style="font-size:85%; opacity:0.75;"><i class="fa-solid fa-fw fa-comment"></i></span>
        {{#each actor.system.details.languages.value}}
        <span style="font-size:75%;letter-spacing:-0.05em">{{this}}</span>
        {{/each}}
        </div>
<div style="height:3px"></div>
    {{/if}}

{{#if actor.system.perception.senses.value}}
<div> 
        <span style="font-size:85%; opacity:0.75"><i class="fa-regular fa-magnifying-glass-plus"></i></span>
        <span style="font-size:75%;letter-spacing:-0.05em"> {{actor.system.perception.senses.value}}</span>
       
</div>
<div style="height:3px"></div>
    {{/if}}

<div  >

        <span style="font-size:85%; opacity:0.75"><i class="fa-solid fa-fw fa-image-portrait"></i></span>
        <span style="font-size:75%;letter-spacing:-0.05em">{{actor.system.details.alignment.value}}</span>
        {{#each actor.system.traits.value}}
        <span style="font-size:75%;letter-spacing:-0.05em">{{this}}</span>
        {{/each}}
</div>


{{/if}}
<div style="height:3px"></div>
{{#each actor.items}}
{{#if (eq this.type "condition")}}
<div style="font-size:85%">
    <img style="width:1em;height:1em" src="{{this.img}}"> <span>{{this.name}}</span>
</div>
{{/if}}
{{/each}}
</div>
</div>
{{/if}}



</form>